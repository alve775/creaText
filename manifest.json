{
  "manifest_version": 3,
  "name": "CreaText",
  "version": "1.0.0",
  "action": { "default_popup": "src/popup.html" },
  "background": { "service_worker": "src/bg.js", "type": "module" },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["src/offscreen.html", "src/offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.jsx"],
      "run_at": "document_idle"
    }
  ]
}
